{
  "compilerOptions": {
    "target": "ES2022",
    "types": ["jest", "node"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "declaration": true,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/*.test-d.ts"]
}
