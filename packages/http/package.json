{
  "name": "@tsmk/http",
  "version": "1.0.0",
  "description": "A generic HTTP server for tsmk",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "tests": "concurrently \"npm run test:jest\" \"npm run test:types\"",
    "test:all": "run-p test test:types",
    "test:jest": "jest --detectOpenHandles --verbose",
    "test:types": "tsd"
  },
  "dependencies": {
    "@tsmk/builder": "workspace:*",
    "@tsmk/router": "workspace:*",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@tsmk/log": "workspace:*",
    "@tsmk/schema": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/node-fetch": "^2.6.11",
    "axios": "^1.10.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "tsd": "^0.31.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2"
  },
  "tsd": {
    "directory": "src"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!yaml|yaml-unist-parser|yallist|@babel)"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "\\.test-d\\.ts$"
    ],
    "moduleNameMapper": {
      "^@tsmk/(.*)$": "<rootDir>/../$1/src"
    },
    "roots": [
      "<rootDir>/src"
    ]
  }
}
