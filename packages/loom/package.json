{
  "name": "@tsmk/loom",
  "version": "1.0.0",
  "description": "A build-free, fiber-based DOM renderer for the TSMK ecosystem.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest"
  },
  "dependencies": {
    "@tsmk/kernel": "workspace:*",
    "@tsmk/reconciler": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.dom.json"
        }
      ]
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "keywords": [
    "tsmk",
    "aura",
    "dom",
    "renderer",
    "fiber",
    "reconciler"
  ],
  "author": "",
  "license": "ISC"
}
