{
  "name": "@tsmk/signals",
  "version": "1.0.0",
  "description": "A signals implementation using @tsmk/kernel",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test:jest": "jest",
    "test:types": "tsd",
    "test": "npm-run-all build test:jest",
    "test:all": "npm-run-all build test:jest test:types"
  },
  "tsd": {
    "directory": "src"
  },
  "dependencies": {
    "@tsmk/kernel": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.3",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "tsd": "^0.32.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/dist/",
      "\\.test-d\\.ts$"
    ],
    "moduleNameMapper": {
      "^@tsmk/(.*)$": "<rootDir>/../$1/src"
    },
    "roots": [
      "<rootDir>/src"
    ]
  }
}
