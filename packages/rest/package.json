{
  "name": "@tsmk/rest",
  "version": "1.0.0",
  "description": "Isomorphic REST API framework for tsmk",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "concurrently \"npm run test:jest\" \"npm run test:types\"",
    "test:all": "run-p test test:types",
    "test:jest": "jest --detectOpenHandles --verbose",
    "test:types": "tsd"
  },
  "dependencies": {
    "@tsmk/http": "workspace:*",
    "@tsmk/kernel": "workspace:*",
    "@tsmk/router": "workspace:*",
    "@tsmk/schema": "workspace:*",
    "@tsmk/server": "workspace:*",
    "@tsmk/scribe": "workspace:*",
    "@tsmk/log": "workspace:*",
    "@types/hjson": "^2.4.6",
    "hjson": "^3.2.2"
  },
  "devDependencies": {
    "@tsmk/scribe": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.2",
    "tsd": "^0.31.0",
    "typescript": "^5.4.5",
    "run-p": "^0.0.0"
  },
  "tsd": {
    "directory": "src"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/dist/",
      "\\.test-d\\.ts$"
    ],
    "moduleNameMapper": {
      "^@tsmk/(.*)$": "<rootDir>/../$1/src"
    },
    "roots": [
      "<rootDir>/src"
    ]
  }
}
