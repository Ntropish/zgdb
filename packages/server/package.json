{
  "name": "@tsmk/server",
  "version": "1.0.0",
  "description": "Transport-agnostic server for the TSMK toolkit",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "concurrently \"npm run test:jest\" \"npm run test:types\"",
    "test:all": "run-p test test:types",
    "test:jest": "jest --detectOpenHandles --verbose",
    "test:types": "tsd"
  },
  "keywords": [
    "tsmk",
    "server",
    "http",
    "tcp",
    "framework"
  ],
  "author": "TSMK",
  "license": "ISC",
  "dependencies": {
    "@tsmk/kernel": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "run-p": "^0.0.0",
    "tsd": "^0.32.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/dist/",
      "\\.test-d\\.ts$"
    ],
    "moduleNameMapper": {
      "^@tsmk/(.*)$": "<rootDir>/../$1/src"
    },
    "roots": [
      "<rootDir>/src"
    ]
  },
  "tsd": {
    "directory": "src"
  }
}
