{
  "name": "@tsmk/router",
  "version": "1.0.0",
  "description": "A generic, protocol-agnostic router for tsmk",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "run-p build test:jest",
    "test:all": "run-p test test:types",
    "test:jest": "jest --detectOpenHandles --verbose",
    "test:types": "tsd"
  },
  "dependencies": {
    "@tsmk/kernel": "workspace:*",
    "@tsmk/signals": "workspace:*",
    "@tsmk/reconciler": "workspace:*",
    "@types/history": "^5.0.0",
    "history": "^5.3.0",
    "@types/jest": "^29.5.12"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "tsd": "^0.31.0",
    "typescript": "^5.4.5"
  },
  "tsd": {
    "directory": "src"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "/dist/",
      "\\.test-d\\.ts$"
    ],
    "moduleNameMapper": {
      "^@tsmk/(.*)$": "<rootDir>/../$1/src"
    },
    "roots": [
      "<rootDir>/src"
    ]
  }
}
