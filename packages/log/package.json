{
  "name": "@tsmk/log",
  "version": "1.0.0",
  "description": "A kernel-pure, transport-agnostic logging library for TSMK.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "run-p build test:jest",
    "test:all": "run-p test test:types",
    "test:jest": "jest --detectOpenHandles --verbose",
    "test:types": "tsd"
  },
  "dependencies": {
    "@tsmk/kernel": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "tsd": "^0.31.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/dist/",
      "\\\\.test-d\\\\.ts$"
    ],
    "moduleNameMapper": {
      "^@tsmk/(.*)$": "<rootDir>/../$1/src"
    },
    "roots": [
      "<rootDir>/src"
    ]
  },
  "tsd": {
    "directory": "src"
  }
}
