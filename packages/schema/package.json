{
  "name": "@tsmk/schema",
  "version": "1.0.0",
  "description": "A Zod-like schema validation library built on tsmk kernels.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm-run-all build tests",
    "build": "tsc",
    "tests": "concurrently \"npm run test:jest\" \"npm run test:types\"",
    "test:jest": "jest",
    "test:types": "tsd -f src/index.test-d.ts"
  },
  "dependencies": {
    "@tsmk/builder": "workspace:*",
    "@tsmk/kernel": "workspace:*",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.3",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "tsd": "^0.32.0",
    "typescript": "^5.4.5"
  },
  "keywords": [
    "tsmk",
    "schema",
    "validation",
    "zod"
  ],
  "author": "",
  "license": "ISC",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/dist/",
      "\\.test-d\\.ts$"
    ],
    "moduleNameMapper": {
      "^@tsmk/(.*)$": "<rootDir>/../$1/src"
    },
    "roots": [
      "<rootDir>/src"
    ]
  }
}
