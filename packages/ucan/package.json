{
  "name": "@zg/ucan",
  "version": "0.1.0",
  "description": "User-Controlled Authorization (UCAN) and DID implementation.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "run-s build test:jest",
    "test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --verbose",
    "test:types": "tsd",
    "test:all": "run-p build test:jest test:types"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.12.12",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/dist/",
      "\\.test-d\\.ts$"
    ],
    "roots": [
      "<rootDir>/src"
    ]
  },
  "dependencies": {
    "@noble/ed25519": "^2.3.0",
    "multiformats": "^13.3.7"
  }
}
