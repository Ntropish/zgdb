{
  "name": "@tsmk/builder",
  "version": "1.0.0",
  "description": "A composable, event-driven builder tool using tsmk kernels.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "run-s build test:jest",
    "test:jest": "jest --detectOpenHandles --verbose",
    "test:types": "tsd",
    "test:all": "run-p build test:jest test:types"
  },
  "dependencies": {
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "tsd": "^0.31.0",
    "typescript": "^5.4.5"
  },
  "keywords": [
    "tsmk",
    "builder",
    "composable"
  ],
  "author": "",
  "license": "ISC",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "/dist/",
      "\\.test-d\\.ts$"
    ],
    "moduleNameMapper": {
      "^@tsmk/(.*)$": "<rootDir>/../$1/src"
    },
    "roots": [
      "<rootDir>/src"
    ]
  },
  "tsd": {
    "directory": "src"
  }
}
