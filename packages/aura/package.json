{
  "name": "@tsmk/aura",
  "version": "1.0.0",
  "description": "A standalone, proxy-based state management library for modern JavaScript applications.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest"
  },
  "dependencies": {
    "@tsmk/kernel": "workspace:^",
    "@tsmk/signals": "workspace:^",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.dom.json"
        }
      ]
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleNameMapper": {
      "^lodash-es$": "lodash"
    }
  },
  "keywords": [
    "tsmk"
  ],
  "author": "",
  "license": "ISC"
}
